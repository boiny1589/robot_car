<launch>
    <!-- 
        This launch file is used to display the robot model in RViz.
    -->

    <!-- Load the URDF model from the xacro file into the parameter server -->
    <param name="robot_description" command="$(find xacro)/xacro '$(find urdf_gazebo)/xacro/car_union.urdf.xacro'" />

    <!-- Start the joint state publisher GUI -->
    <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />

    <!-- Start the robot state publisher -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <!-- Start RViz with a custom configuration file -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find urdf_gazebo)/config/display.rviz" required="true" />

</launch> 